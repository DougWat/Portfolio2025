</section>

<script>
    function ProjectSlider(){
        const master = $('.project-display');
        const slider = $(master).find('.project-scroller')
        const controls = $(master).find(".project-display-controls");
        const pagination = $(controls).find('.pagination');
        const next = $(controls).find('.control.next');
        const prev = $(controls).find('.control.prev');

        const swiper = new Swiper($(slider)[0], {
            // Optional parameters
            direction: 'vertical',
            slidesPerView:"auto",
            spaceBetween:60,
            mousewheel:true,
            speed:600,
            centerInsufficientSlides:true,
            navigation: {
                nextEl: $(next)[0],
                prevEl: $(prev)[0],
                disabledClass:"control-disabled",
                hiddenClass:"control-hidden"
            },
            pagination: {
                el: $(pagination)[0],
                type: 'bullets',
                bulletClass:"project-display-bullet",
                bulletActiveClass:"active",
                paginationDisabledClass:"pagination-disabled",
                clickable:true,
                
            }
        });

    }

    document.addEventListener('DOMContentLoaded',ProjectSlider);
</script>