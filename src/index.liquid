<!-- Project Slider -->
<script>
    function ProjectSlider(){
        const master = $('.project-display');
        const slider = $(master).find('.project-scroller')
        const controls = $(master).find(".project-display-controls");
        const pagination = $(controls).find('.pagination');
        const next = $(controls).find('.control.next');
        const prev = $(controls).find('.control.prev');

        const swiper = new Swiper($(slider)[0], {
            // Optional parameters
            direction: 'vertical',
            slidesPerView:"auto",
            spaceBetween:60,
            mousewheel:true,
            speed:600,
            centerInsufficientSlides:true,
            navigation: {
                nextEl: $(next)[0],
                prevEl: $(prev)[0],
                disabledClass:"control-disabled",
                hiddenClass:"control-hidden"
            },
            pagination: {
                el: $(pagination)[0],
                type: 'bullets',
                bulletClass:"project-display-bullet",
                bulletActiveClass:"active",
                paginationDisabledClass:"pagination-disabled",
                clickable:true,
                
            }
        });

    }

    function ProjectCards(){
        const master = $('.project-display');
        const cards = $(master).find(".project-card");

        $(cards).each((i,card)=>{
            $(card).on('click',()=>{
                const path = $(card).data('path');
                loadPageContent(path,"ProjectModalData");
            });
        });
    }

    document.addEventListener('DOMContentLoaded',ProjectSlider);
    document.addEventListener('DOMContentLoaded',ProjectCards);
</script>
<!-- Computer Man-->
<script>

    async function loadPageContent(url, targetElementId, successCallback) {
        try {
            const response = await fetch(url);
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            const parser = new DOMParser();
            const htmlContent = await response.text();
            const bodyParse = parser.parseFromString(htmlContent,'text/html').body.innerHTML;
            
            const targetElement = document.getElementById(targetElementId);
            if (targetElement) 
            {
                targetElement.innerHTML = bodyParse;
                if(successCallback){
                    successCallback();
                }
            } else
            {
                console.error(`Target element with ID '${targetElementId}' not found.`);
            }
        } catch (error) {
            console.error('Error fetching or displaying content:', error);
        }
    }

</script>
